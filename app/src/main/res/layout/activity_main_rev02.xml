<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlLayout"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <net.validcat.fishing.ui.RoundedImageView
        android:id="@+id/imageView_round"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        android:src="@drawable/vodobud" />

    <net.validcat.fishing.ui.RoundedImageView
        android:id="@+id/imageView_weather"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/weather_rev01"
        android:scaleType="center" />

    <TextView
        android:id="@+id/tv_place_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="24dp"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:text="@string/place_main"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/fishing_name_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_description_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="48dp"
        android:text="@string/description_main"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/description_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_date_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="24dp"
        android:text="@string/date_main"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/date_color"
        android:textSize="12sp"
        android:layout_alignParentRight="true" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="48dp"
        android:clickable="false"
        android:numStars="1"
        android:layout_alignParentRight="true" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="88dp"
        android:background="@color/devider_color"
        android:contentDescription="@string/image_descr" />

    <net.validcat.fishing.ui.FloatingActionButton
        android:id="@+id/fab_add_fishing"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_gravity="bottom|right"
        android:background="@drawable/fab_background"
        android:elevation="@dimen/fab_elevation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
         />

    <ImageView
        android:layout_width="@dimen/fab_icon_size"
        android:layout_height="@dimen/fab_icon_size"
        android:contentDescription="@string/string_fab_icon"
        android:duplicateParentState="true"
        android:src="@drawable/fab_icons"
        android:visibility="visible"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignBottom="@+id/fab_add_fishing"
        android:layout_alignRight="@+id/fab_add_fishing"
        android:layout_alignEnd="@+id/fab_add_fishing"
      />


</RelativeLayout>